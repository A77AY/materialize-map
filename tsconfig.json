{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["ESNext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "lib",
        "skipDefaultLibCheck": true
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
